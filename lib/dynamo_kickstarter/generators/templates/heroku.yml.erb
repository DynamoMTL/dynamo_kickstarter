production:
  app: <%= application_name %>-production
  stack: cedar
  config: &default
    BUNDLE_WITHOUT: "development:test"
  addons:
    - pgbackups:auto-month
    - newrelic:standard
    - sendgrid:starter

staging:
  stack: cedar
  app: <%= application_name %>-staging
  config:
    BUNDLE_WITHOUT: "development:test"
  addons:
    - pgbackups:auto-month
    - sendgrid:starter
